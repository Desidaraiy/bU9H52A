NODE_ENV=development

# Bybit API
BYBIT_API_KEY=your_testnet_api_key
BYBIT_API_SECRET=your_testnet_api_secret
BYBIT_TESTNET=true

# OpenAI
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4-turbo

# Риск-менеджмент
MAX_DRAWDOWN=0.1
INITIAL_BALANCE=50
POSITION_SIZE_PERCENT=0.02

# База данных (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=crypto_bot
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_DIALECT=mysql

# Новости
NEWS_UPDATE_INTERVAL=900000  # 15 минут
NEWS_SOURCES=["https://cryptopanic.com","https://cointelegraph.com"]

# Уведомления
NOTIFICATION_EMAIL=your@email.com
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

NOTIFICATION_EMAIL_SENDER=yourmail@gmail.com
NOTIFICATION_EMAIL_PASSWORD=yourpassword
NOTIFICATION_EMAIL=recipient@example.com